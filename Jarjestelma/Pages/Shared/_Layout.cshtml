<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Järjestelmä</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Järjestelmä</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Kytke navigaatio">
                <span class="navbar-toggler-icon"></span>
             </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Etusivu</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AsiakasLista/Index">Asiakkaat</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="" style="text-decoration: line-through;">Työntekijät</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="" style="text-decoration: line-through;">Tuotteet</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="" style="text-decoration: line-through;">Tilaukset</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <button class="btn btn-outline-success my-2 my-sm-0" style="text-decoration: line-through;">Kirjaudu sisään</button>
                    <button class="btn btn-outline-success my-2 my-sm-0" style="text-decoration: line-through;">Rekisteröidy</button>
                </form>
            </div>
       </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Järjestelmä - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
