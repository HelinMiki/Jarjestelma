@page
@model Jarjestelma.Pages.AsiakasLista.MuokkaaModel

<p><h2 class="text-info">Muokkaa asiakas</h2></p>

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Customer.CustomerID" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>


        @*Pakollinen*@
        <div class="form-group row">
            <div class="col-3">

                <label asp-for="Customer.CompanyName">*Yrityksen nimi</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.CompanyName" class="form-control" />
            </div>
            <span asp-validation-for="Customer.CompanyName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.ContactName">Yhteyshenkilö</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.ContactName" class="form-control" />
            </div>
            <span asp-validation-for="Customer.ContactName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.ContactTitle">Titteli</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.ContactTitle" class="form-control" />
            </div>
            <span asp-validation-for="Customer.ContactTitle" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Address">Yritysosoite</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Address" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Address" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.PostalCode">Postinumero</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.PostalCode" class="form-control" />
            </div>
            <span asp-validation-for="Customer.PostalCode" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.City">Kaupunki</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.City" class="form-control" />
            </div>
            <span asp-validation-for="Customer.City" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Region">Seutu</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Region" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Region" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Country">Maa</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Country" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Country" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Phone">Puhelinnumero</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Phone" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Phone" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Päivitä" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Peruuta</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
